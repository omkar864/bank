    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "index.ts",
    "next.ts",
    "api.ts",
    "triggers.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
